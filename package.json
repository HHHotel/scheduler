{
    "name": "Hounds",
    "version": "0.3.5",
    "description": "Dog Scheduling App",
    "main": "main.js",
    "scripts": {
        "debug": "electron --inspect=8081",
        "test": "ts-mocha -p tsconfig.json app/**/*.spec.ts",
        "compile": "webpack --config webpack.prod.js",
        "watch": "webpack --watch",
        "prestart": "webpack",
        "start": "electron .",
        "lint": "tslint -p .",
        "prepack-all": "npm run compile",
        "pack-all": "electron-builder -mwl",
        "prepack-unix": "npm run compile",
        "pack-unix": "electron-builder -ml",
        "pack-linux": "electron-builder --linux",
        "prepack-mac": "electron-builder --mac",
        "pack-mac": "electron-builder --mac",
        "prepack-win": "npm run compile",
        "pack-win": "electron-builder --win"
    },
    "build": {
        "productName": "Hounds",
        "appId": "com.github.hhhotel.hounds",
        "copyright": "Copyright Â© 2019 Matt Rochford",
        "directories": {
            "output": "release_builds"
        },
        "publish": [
            "github"
        ],
        "files": [
            "main.js",
            "config/*",
            "dist/**/**/*"
        ],
        "linux": {
            "target": "AppImage",
            "category": "Utilities",
            "icon": "dist/res/images/icon.png"
        },
        "win": {
            "artifactName": "${productName}-Web-Setup-${version}.exe",
            "target": "nsis-web",
            "icon": "dist/res/images/icon.ico"
        },
        "nsis": {
            "deleteAppDataOnUninstall": true,
            "oneClick": false
        },
        "mac": {
            "category": "public.app-category.business",
            "target": "zip",
            "icon": "dist/res/images/icon.icns"
        }
    },
    "author": "Matt Rochford",
    "repository": "https://github.com/hhhotel/scheduler",
    "license": "MIT",
    "dependencies": {
        "@happyhoundhotel/hounds-ts": "^0.3.18",
        "angular": "^1.7.9",
        "angular-route": "^1.7.9",
        "date-fns": "^2.8.1",
        "electron-log": "^3.0.9",
        "electron-updater": "^4.2.0",
        "fs": "0.0.1-security",
        "scroll-into-view": "^1.14.1",
        "ws": "^7.4.5"
    },
    "devDependencies": {
        "@types/angular": "^1.6.57",
        "@types/angular-route": "^1.7.0",
        "@types/chai": "^4.2.7",
        "@types/mocha": "^5.2.7",
        "@types/ws": "^7.2.1",
        "chai": "^4.2.0",
        "electron": "^4.2.12",
        "electron-builder": "^21.2.0",
        "eslint": "^6.8.0",
        "htmlhint": "^0.11.0",
        "mocha": "^6.2.2",
        "prettier": "^1.19.1",
        "ts-loader": "^6.2.1",
        "ts-mocha": "^6.0.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.4",
        "webpack": "^4.41.4",
        "webpack-cli": "^3.3.10"
    }
}
