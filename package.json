{
    "name": "hounds",
    "version": "0.3.2",
    "description": "Dog Scheduling App",
    "main": "main.js",
    "scripts": {
        "test": "ts-mocha -p tsconfig.json app/**/*.spec.ts",
        "compile": "webpack --config webpack.prod.js",
        "watch": "webpack --watch",
        "prestart": "webpack",
        "start": "electron .",
        "lint": "tslint -p .",
        "prepack-all": "npm run compile",
        "pack-all": "electron-builder -mwl",
        "prepack-unix": "npm run compile",
        "pack-unix": "electron-builder -ml",
        "pack-linux": "electron-builder --linux",
        "prepack-mac": "electron-builder --mac",
        "pack-mac": "electron-builder --mac",
        "prepack-win": "npm run compile",
        "pack-win": "electron-builder --win"
    },
    "build": {
        "productName": "Hounds",
        "appId": "com.github.hhhotel.hounds",
        "copyright": "Copyright Â© 2019 Matt Rochford",
        "directories": {
            "output": "release_builds"
        },
        "publish": [
            "github"
        ],
        "files": [
            "main.js",
            "config/*",
            "dist/**/**/*"
        ],
        "linux": {
            "target": "AppImage",
            "category": "Utilities",
            "icon": "dist/res/images/icon.png"
        },
        "win": {
            "artifactName": "${productName}-Web-Setup-${version}.exe",
            "target": "nsis-web",
            "icon": "dist/res/images/icon.ico"
        },
        "nsis": {
            "deleteAppDataOnUninstall": true,
            "oneClick": false
        },
        "mac": {
            "category": "public.app-category.business",
            "target": "zip",
            "icon": "dist/res/images/icon.icns"
        }
    },
    "author": "Matt Rochford",
    "repository": "https://github.com/hhhotel/scheduler",
    "license": "MIT",
    "dependencies": {
        "@happyhoundhotel/hounds-ts": "^0.3.14",
        "angular": "^1.6.9",
        "angular-route": "^1.6.9",
        "date-fns": "^2.6.0",
        "electron-log": "^3.0.9",
        "electron-updater": "^4.1.2",
        "fs": "0.0.1-security"
    },
    "devDependencies": {
        "@types/angular": "^1.6.56",
        "@types/angular-route": "^1.7.0",
        "@types/chai": "^4.2.2",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "electron": "^4.1.4",
        "electron-builder": "^21.2.0",
        "htmlhint": "^0.11.0",
        "mocha": "^6.2.0",
        "prettier": "^1.18.2",
        "ts-loader": "^6.0.4",
        "ts-mocha": "^6.0.0",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.5.3",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.7"
    }
}
